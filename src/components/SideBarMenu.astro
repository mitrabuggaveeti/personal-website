---
const { sideBarActiveItemID } = Astro.props;
const activeClass = "bg-base-300"; // For primary color replace with `active` class
---

<ul class="menu grow shrink menu-md overflow-y-auto mt-20">
    <li><a class="py-3 text-base hover:scale-[102%] hover:bg-amber-500 hover:text-white" id="about" href="/">About</a></li>
    <li><a class="py-3 text-base hover:scale-[102%] hover:bg-amber-500 hover:text-white" id="projects" href="/projects">Projects</a></li>
    <li><a class="py-3 text-base hover:scale-[102%] hover:bg-amber-500 hover:text-white" id="blog" href="/blog/">Blog</a></li>
    <li><a class="py-3 text-base hover:scale-[102%] hover:bg-amber-500 hover:text-white" id="cv" href="/cv">Resume</a></li>
    <li>
        <a
            class="py-3 text-base"
            href="mailto:buggaveetimitra@gmail.com"
            target="_blank"
            referrerpolicy="no-referrer-when-downgrade">Contact</a
        >
    </li>
</ul>

<script define:vars={{ sideBarActiveItemID: sideBarActiveItemID, activeClass: activeClass }}>
const activeItemElem = document.getElementById(sideBarActiveItemID);
activeItemElem && activeItemElem.classList.add(activeClass);
</script>
